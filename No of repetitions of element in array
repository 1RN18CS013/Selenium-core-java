import java.util.Scanner;
public class repeatelement {
    public static void main(String[] args) {
        int n,count=0,i,num;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the number of elements in an array");
        n=sc.nextInt();
        int a[]=new int[n];
       System.out.println("Enter the array elements");
        for(i=0;i<n;i++)
        {
            a[i]=sc.nextInt();

        }
        System.out.println("Enter the number for which repitition count should be found");
        num=sc.nextInt();
        for(i=0;i<n;i++){
            if(a[i]==num)
            count++;
        }
        System.out.println("No of repetitions of given number is: "+count);
    }
}
